# IAMC Production Environment Variables Template
# Copy this file to .env.production and configure for your environment

# API Configuration
IAMC_API_BASE_URL=https://api.iamc.example.com
IAMC_API_PORT=8787
IAMC_API_LOG_LEVEL=info

# CLI Paths (for hypothesis generation)
IAMC_CLI_INDEX=/usr/local/bin/iamc-index
IAMC_CLI_RETRIEVE=/usr/local/bin/iamc-retrieve

# Export Configuration
WKHTMLTOPDF_PATH=/usr/local/bin/wkhtmltopdf
IAMC_EXPORT_FORMATS=zip,pdf,csv,json

# Security Settings
IAMC_REQUIRE_DUAL_SIGNOFF=true
IAMC_SIGNOFF_TIMEOUT_HOURS=24
IAMC_SESSION_SECRET=change-this-to-a-secure-random-string

# Performance Settings
IAMC_CACHE_TTL_SECONDS=300
IAMC_MAX_CONCURRENT_REQUESTS=10

# Feature Flags
IAMC_FEATURE_HYPOTHESIS_GENERATION=true
IAMC_FEATURE_TOUCH_MODE=true
IAMC_FEATURE_ADVANCED_EXPORT=true

# Database Configuration (if applicable)
DATABASE_URL=postgresql://user:pass@localhost/iamc_prod

# External Services
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
ANALYTICS_ID=UA-XXXXXXXXX-X

# Kiosk Mode Defaults
IAMC_KIOSK_AUTO_REFRESH=30
IAMC_KIOSK_IDLE_TIMEOUT=300
IAMC_KIOSK_DEFAULT_PAGE=/radar

# Contract Paths
IAMC_CONTRACTS_DIR=/app/contracts
IAMC_ROLES_CONTRACT=/app/contracts/roles.v1.json

# Mock Mode (set to false for production)
IAMC_MOCK_MODE=false
IAMC_EXAMPLES_DIR=/app/examples